@model ABCMusic_Auth.Models.Song

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Details";
}

<div class="row">
	<div class="col-md-3"></div>
	<div class="abc-dialog view-dialog col-md-6">
		<div class="row">
			<h4 id="abc-dialog-title" class="panel-header">SONG INFO</h4>
		</div>
		<div class="row">
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.Name)</p>
			</div>
			<div class="form-group">
				<label asp-for="ArtistName" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.ArtistName)</p>
			</div>
			<div class="form-group">
				<label asp-for="Length" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.Length)</p>
			</div>
			<div class="form-group">
				<label asp-for="ReleaseDate" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.ReleaseDate)</p>
			</div>
			<div class="form-group">
				<label asp-for="AlbumId" class="control-label"></label>
				@if (Model.Album != null)
				{
				<p>@Html.DisplayFor(model => model.Album.DisplayName)</p>
				}
				else
				{
				<p>None</p>
				}
			</div>
			@if (Model.Album != null)
			{
			<div class="form-group">
				<label asp-for="TrackNumber" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.TrackNumber)</p>
			</div>
			}
			<div class="form-group">
				<label asp-for="Publisher" class="control-label"></label>
				<p>@Html.DisplayFor(model => model.Publisher)</p>
			</div>
			<div class="form-group middle-align">
				<input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Songs")'" />
				<input type="button" value="Edit" class="btn update-button" onclick="location.href='@Url.Action("Edit", "Songs", new { Model.Id })'" />
				<input type="button" value="Delete" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Songs", new { Model.Id })'" />

				&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;

				@if (Model.AlbumId != null)
				{
					<input type="button" value="View Album" class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Albums", new { id = Model.AlbumId })'" />
				}

				<input type="button" value="View Reviews" class="btn btn-primary" onclick="location.href='@Url.Action("ReviewsBySong", "Reviews", new { id = Model.Id })'" />
			</div>
		</div>
	</div>
	<div class="col-md-3"></div>
</div>
