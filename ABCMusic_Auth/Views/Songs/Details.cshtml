@model hanna80_ABCMusic_Auth.Models.Song

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AlbumName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AlbumName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrackNumber)
        </dt>
        <dd>
			@if (Model.TrackNumber.HasValue)
			{
				@Html.DisplayFor(model => model.TrackNumber)
			}
			else
			{
				<p><i>None</i></p>
			}
            @*@Html.DisplayFor(model => model.TrackNumber)*@
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd>
            @if (Model.ReleaseDate.HasValue)
			{
				DateTime releaseDate = Model.ReleaseDate.Value.Date;
				string displayValue = releaseDate.Month + "/"
					+ releaseDate.Day + "/"
					+ releaseDate.Year;


				@Html.DisplayFor(model => displayValue)
			}
			else
			{
				<p><i>None</i></p>
			}
			@*@Html.DisplayFor(model => model.ReleaseDate)*@
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Publisher)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Publisher)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SongId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
